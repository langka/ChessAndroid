<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_roomlist"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/header_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@color/B1" />

    <TextView
        android:id="@+id/head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/head_icon"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/head_icon"
        android:text="高远"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_name"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/head_icon">

        <TextView
            android:id="@+id/head_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/colorRed"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/head_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_win"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_win"
            android:layout_toRightOf="@+id/head_win"
            android:src="@drawable/ic_mood_bad_black_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_win"
            android:src="@drawable/ic_mood_black_24dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/refresh"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_refresh_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>